<div class="col col-6 mx-auto text-dark">
	<h2 class="mt-3">Guest list</h2>

		<% user_list = @event.users %> 
	<ul>
		<% user_list.each do |u| %>
		<li class="list-group-item">First Name: <%= u.first_name %></li>
		<li class="list-group-item">Last Name: <%= u.last_name %></li>
		<li class="list-group-item">Email: <%= u.email %></li>
		<% end %>
	</ul>
	<p><%= link_to "Edit your event", edit_event_path(@event), class: "btn btn-secondary", role: "button" %></p>
</div>





