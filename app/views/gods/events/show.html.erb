<div class="col col-6 mx-auto">
<h2><%= @event.title %></h2>
<%= @event.admin.first_name %>	
<%= @event.admin.last_name %><br>	
		<%= @event.description %><br>
		<%= @event.start_date %><br>
		<%= @event.duration %><br>
		<%= @event.price %><br>
		<%= @event.location %><br>
<%= form_tag url_for(action: 'update'), method: "patch", class: "mt-4" do %>
<%= radio_button_tag(:validated, "true") %>
<%= label_tag(:is_validated_yes, "Yes") %>
<%= radio_button_tag(:validated, "false") %>
<%= label_tag(:is_validated_no, "No") %>
<%=submit_tag "Submit", class: "btn btn-primary mb-3" %>
<% end %>

</div>