<div class="text-dark">
  <h3 class="text-center mt-3 mb-4">Create user</h3> 

  <!-- Zone du formulaire -->
  <%= form_tag url_for(action: 'create'), method: 'post', class: "col col-4 mx-auto" do %>

  <b><%= label_tag 'First name' %></b>
  <%= text_field_tag 'first_name', @user.first_name, class: "form-control datetimepicker-input" %>


  <b><%= label_tag 'Last name' %></b>
  <%= text_field_tag 'last_name', @user.last_name, class: "form-control" %>


  <b><%= label_tag 'Email' %></b>
  <%= text_field_tag 'email', @user.email, class: "form-control"  %>
 

  <b><%= label_tag 'Password' %></b>
  <%= password_field_tag 'password', @user.password, class: "form-control"  %>

  <b><%= label_tag 'Description' %></b>
  <%= text_area_tag  'description',@user.description, class: "form-control mb-3"  %>

  <%= submit_tag "Create", class: "btn btn-primary mb-4 mt-3" %>

  <% end %>
</div>

<% if @user.errors.any? %>
<div class="alert alert-danger" role="alert">
 <p>The user can't be created for the reasons below:</p>
 <ul>
   <% @user.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
 </ul>
</div>
<% end %>