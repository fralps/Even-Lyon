<div class="col col-6 mx-auto text-dark mt-4">
  <h2>Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field mt-4 mb-4">
    <b><%= f.label :password, "New password" %></b>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field mb-4">
    <b><%= f.label :password_confirmation, "Confirm new password" %></b><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="actions mb-4">
    <%= f.submit "Change my password", class: "btn btn-primary" %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
