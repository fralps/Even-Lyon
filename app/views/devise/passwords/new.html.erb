<div class="mt-3 col col-4 mx-auto text-dark">
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mt-3">
   <b> <%= f.label :email %></b><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-3" %>
  </div>

  <div class="actions mb-2">
    <%= f.submit "Send me reset password instructions", class: "btn btn-primary form-control"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
