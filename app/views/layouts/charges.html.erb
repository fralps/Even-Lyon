	<%= stylesheet_link_tag    'application', media: 'all' %>
	<%= javascript_include_tag 'application' %>
</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
		<%= link_to "Event Lyon", root_path, class: "navbar-brand" %>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>

		<div class="collapse navbar-collapse" id="navbarSupportedContent">
			<ul class="navbar-nav mr-auto">
				<li class="nav-item">
					<%= link_to "Home", root_path, class: "nav-item nav-link" %>
				</li>
				<li class="nav-item">
					<%= link_to "Create event", new_event_path, class: "nav-item nav-link" %>
				</li>

				<% if user_signed_in? %>
				<div class="dropdown ml-2">
					<a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						Profile
					</a>

					<div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
						<%= link_to "Profile", user_path(current_user), class: "dropdown-item" %>
						<%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
					</div>
				</div>

				<% else %>

				<div class="dropdown ml-2">
					<a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						Sign Up / Sign In
					</a>

					<div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
						<%= link_to "Sign Up", new_user_registration_path, class: "dropdown-item" %>
						<%= link_to "Sign In", new_user_session_path, class: "dropdown-item" %>
					</div>
				</div>
				<% end %>
			</li>
		</ul>
	</div>
</nav>
<%= yield %>

<!-- Footer -->
<footer class="py-5 bg-black">
	<div class="container">
		<p class="m-0 text-center text-white small">Made with ü¶â üêô in Lyon - 2019</p>
